{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build user app",
            "type": "shell",
            "command": "make",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/user"
            },
            "problemMatcher": [
                "$rustc",
            ]
        },
        {
            "label": "Build OS",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Convert Binary",
            "type": "shell",
            "command": "rust-objcopy",
            "args": [
                "--strip-all",
                "target/riscv64gc-unknown-none-elf/release/Artemos",
                "-O",
                "binary",
                "target/riscv64gc-unknown-none-elf/release/os.bin"
            ],
            "dependsOn": [
                "Build"
            ]
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "qemu-system-riscv64",
            "args": [
                "-machine",
                "virt",
                "-nographic",
                "-bios",
                "bootloader/rustsbi-qemu.bin",
                "-device",
                "loader,file=target/riscv64gc-unknown-none-elf/release/Artemos"
            ],
            "dependsOn": [
                "Build user app",
                "Build OS"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false
        },
        {
            "label": "Debug QEMU",
            "type": "shell",
            "command": "qemu-system-riscv64",
            "args": [
                "-machine",
                "virt",
                "-nographic",
                "-bios",
                "bootloader/rustsbi-qemu.bin",
                "-device",
                "loader,file=target/riscv64gc-unknown-none-elf/release/Artemos",
                "-s", // shorthand for -gdb tcp::1234
                "-S" // freeze CPU at startup (use 'c' to start execution)
            ],
            "dependsOn": [
                "Build user app",
                "Build OS"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        }
    ]
}